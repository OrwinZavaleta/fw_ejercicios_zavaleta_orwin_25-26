extends ../partials/_layout.pug 

block content 
    .container.py-3
        .row.pb-3.justify-content-md-between
            <div class="col-md-8">
                <div id="descripcionPlato" class="mb-3">
                    <h1 id="nombrePlato"></h1>

                    h2 Ingredientes 
                    <ul class="list-group" id="ingredientes">
                    </ul>
                </div>
                <div class="d-none" id="detallesForm">
                    <form class="row g-3 needs-validation" id="guardarOpinion" novalidate>
                        h3 Formulario
                        <div class="col-md-5">
                            h4 Calificación
                            <div class="text-warning fs-3">
                                <i class="bi bi-star"></i>
                                <i class="bi bi-star"></i>
                                <i class="bi bi-star"></i>
                                <i class="bi bi-star"></i>
                                <i class="bi bi-star"></i>
                            </div>
                            input(type="hidden", name="rating", id="rating", value="0")
                        </div>
                        <div class="col-md-5">
                            h4 ¿Ha hecho ya la receta?
                            <div class="form-check">
                                <input class="form-check-input" type="radio" id="quieroHacerla" name="estado" value="QUIERO_HACERLA" checked>
                                label(for="QUIERO_HACERLA").form-check-label Quiero hacerla
                            </div> 
                            <div class="form-check">
                                <input class="form-check-input" type="radio" id="hecho" name="estado" value="LA_HE_HECHO">
                                label(for="LA_HE_HECHO").form-check-label La he hecho
                            </div>
                        </div>
                        <div class="col-md-7">
                            label(for="opinion").form-label.fs-4 Su opinión
                            textarea#opinion(name="opinion" rows="4" placeHolder="Escribanos su opinión.").form-control
                        </div> 
                        <div class="col-md-6">
                            button(type="submit").btn.btn-primary Enviar 
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-4 text-end">
                img#imagenPlato(src="#" alt="Cargando Imagen...").img-square
                <button type="submit" class="btn btn-outline-warning px-5 my-3" id="platoFavorito">Favorita</button>
            </div>



block scripts 
    <script type="module" src="./dist/details.js"></script>